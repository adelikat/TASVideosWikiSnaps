[h4 
	" Miscellaneous notes
	$LF
	[a id=heading-7965 
	]a
]h4
[ul 
	[li 
		" Games might poll input multiple times within a single frame.
		$LF
		[ul 
			[li 
				" TODO: test it out. 
				$LF
			]li
		]ul
		" Cart swapping not investigated at all. 
		$LF
	]li
	[li 
		" No "cart lock" (plastic piece preventing cart swapping).
	]li
]ul
