[h4 id=EmulatorSettings 
	" Emulator settings
	$LF
]h4
[dl 
	[dt 
		"Controller Settings
	]dt
	[dd 
		$LF
	]dd
]dl
[ul 
	[li 
		"Joystick (UDLR1), ProLine (UDLR12), Light Gun (XY1)
		$LF
	]li
	[li 
		"A7800 > Controller Settings - some games only works with specific controllers
		$LF
	]li
	[li 
		"Go to Config > Controllers to customize it
		$LF
	]li
