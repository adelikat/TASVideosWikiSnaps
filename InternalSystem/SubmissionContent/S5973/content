[h3 
	" Controls
	$LF
]h3
[ul 
	[li 
		" up - speed up
		$LF
	]li
	[li 
		" down - slow down
		$LF
	]li
	[li 
		" left - move left
		$LF
	]li
	[li 
		" right - move right
		$LF
	]li
	[li 
		" B - machine gun
		$LF
	]li
	[li 
		" A - use weapon
		$LF
	]li
	[li 
		" select - change weapon
		$LF
	]li
	[li 
		" start - call weapons van
		$LF
	]li
]ul
