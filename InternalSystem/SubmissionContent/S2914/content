[h3 
	" Movie criteria
	$LF
	[a id=heading-215 
	]a
]h3
[h4 
	" Objectives
	$LF
	[a id=heading-233 
	]a
]h4
[ul 
	[li 
		" Aims for fastest input time
		$LF
	]li
	[li 
		" Takes damage to save time
		$LF
	]li
	[li 
		" Abuses deaths as shortcuts
		$LF
	]li
	[li 
		" Abuses programming errors
		$LF
	]li
	[li 
		" Uses glitched warps
		$LF
	]li
	[li 
		" Manipulates luck
		$LF
	]li
]ul
[h4 
	" Emulator used
	$LF
	[a id=heading-411 
	]a
]h4
[p 
	"VBA Rerecording 1.72 series: v19.3, v19.4, v19.5, v21, v22, v23, v23.1, v23.2, v23.3-WIP, SVN r86-301, etc.
	$LF
]p
