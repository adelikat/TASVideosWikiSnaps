[h3 id=HauntedCastle 
	" Haunted Castle
	$LF
]h3
[h1 
	" Lap 1
	$LF
]h1
[ul 
	[li 
		" Turn around immediately
		$LF
	]li
	[li 
		" Pickup 2 coins
		$LF
	]li
	[li 
		" Use first coin to do a Spyro skip with 
		[b 
			"Jump
		]b
		" skipping a portion of the track
		$LF
	]li
	[li 
		" Use the other coin to get a 
		[b 
			"Power Up!
		]b
		$LF
	]li
	[li 
		" Pickup coin and spin wheel before crossing halfway point to get a second 
		[b 
			"Power Up!
		]b
		$LF
	]li
	[li 
		" Go the longer route down the spiral to get a coin to get the final 
		[b 
			"Power Up!
		]b
		$LF
	]li
]ul
[h1 
	" Lap 2
	$LF
]h1
[ul 
	[li 
		" Pick up two more coins
		$LF
	]li
	[li 
		" Use the first to Spyro skip again with another 
		[b 
			"Jump
		]b
		$LF
	]li
	[li 
		" Pickup a coin and immediately use it before crossing into the second half of the lap to get a 
		[b 
			"Super Shield
		]b
		" for later
		$LF
	]li
	[li 
		" Ride up on the rail an jam the car into a corner to get it stuck while having one corner of the car be registered as in the next sector (below)
		$LF
	]li
	[li 
		" Getting stuck like this forces a respawn and since the car is registered as in the next sector it serves as a forward warp
		$LF
	]li
	[li 
		" 
		[b 
			"Super Shield
		]b
		" for acceleration and top speed
		$LF
	]li
	[li 
		" Turn around and finish lap
		$LF
	]li
]ul
[h1 
	" Lap 3
	$LF
]h1
[ul 
	[li 
		" Continue 
		[b 
			"Super Shield
		]b
		$LF
	]li
	[li 
		" Pick up 2 more coins
		$LF
	]li
	[li 
		" Use 
		[b 
			"Jump
		]b
		" to Spyro skip again
		$LF
	]li
	[li 
		" Continue using "Super Shield" saving the final one
		$LF
	]li
	[li 
		" Use the final "Super Shield" for acceleration and top speed
		$LF
	]li
	[li 
		" Force another forward warp by getting stuck
		$LF
	]li
	[li 
		" Don't turn around since this is the final lap and there's only a short distance to go
		$LF
	]li
	[li 
		" Finish the lap, race, and championship
		$LF
	]li
]ul
