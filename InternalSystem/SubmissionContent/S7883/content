[h3 id=CrazyCoaster 
	" Crazy Coaster
	$LF
]h3
[h1 
	" Lap 1
	$LF
]h1
[ul 
	[li 
		" Hold off on turning around to make grabbing coins easier
		$LF
	]li
	[li 
		" Pick up first 4 coins
		$LF
	]li
	[li 
		" Turn around with a Y-turn
		$LF
	]li
	[li 
		" Pick up next 2 coins
		$LF
	]li
	[li 
		" Get a single 
		[b 
			"Power Up!
		]b
		" in before preforming a S-bend skip with a 
		[b 
			"Jump
		]b
		$LF
	]li
	[li 
		" Get a second 
		[b 
			"Jump 
		]b
		"in to skip over a big portion of the track
		$LF
	]li
	[li 
		" Use a coin before crossing the halfway point to get a second 
		[b 
			"Power Up!
		]b
		$LF
	]li
]ul
[h1 
	" Lap 2
	$LF
]h1
[ul 
	[li 
		" After the ramp begin riding off the track to setup lap skip
		$LF
	]li
	[li 
		" Use a series of 
		[b 
			"Dynamite
		]b
		"s to switch between the rails of the track to maintain respawn location for lap skip
		$LF
	]li
	[li 
		" These switches are needed as it is not possible to drive on one side without hitting invisible walls or going out-of-bounds (and respawning)
		$LF
	]li
	[li 
		" 
		[b 
			"Dynamite
		]b
		" over the track to achieve enough lap progress to enable lap skip on respawn
		$LF
	]li
]ul
[h1 
	" Lap 3
	$LF
]h1
[ul 
	[li 
		" 
		[b 
			"Dynamite
		]b
		" back onto the track rail to setup for another lap skip
		$LF
	]li
	[li 
		" Use 
		[b 
			"Jump
		]b
		" to switch between rails followed by another 
		[b 
			"Dynamite
		]b
		$LF
	]li
	[li 
		" End with a 
		[b 
			"Jump
		]b
		" to complete the lap skip
		$LF
	]li
]ul
