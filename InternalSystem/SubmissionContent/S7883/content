[h3 id=ToonVillage 
	" Toon Village
	$LF
]h3
[h1 
	" Lap 1
	$LF
]h1
[ul 
	[li 
		" Turn around and collect 4 coins to start
		$LF
	]li
	[li 
		" Use first 3 coins to get 
		[b 
			"Power Up!
		]b
		$LF
	]li
	[li 
		" Use 4th coin to get 
		[b 
			"Bomb
		]b
		$LF
	]li
	[li 
		" Place 
		[b 
			"Bomb
		]b
		" strategically off track for use on the next lap
		$LF
	]li
	[li 
		" 8th place car used to accelerate back to full speed
		$LF
	]li
	[li 
		" 
		[b 
			"Jump
		]b
		" to Deo-Express over a portion of the track
		$LF
	]li
	[li 
		" Cut through the main track to pick up another coin
		$LF
	]li
	[li 
		" Coin used to get another 
		[b 
			"Jump
		]b
		" to skip the corkscrew track
		$LF
	]li
]ul
[h1 
	" Lap 2
	$LF
]h1
[ul 
	[li 
		" 4 more coins picked up
		$LF
	]li
	[li 
		" Ride off bridge to start setup lap skip
		$LF
	]li
	[li 
		" Continue riding off track until the 
		[b 
			"Bomb
		]b
		" from place on the previous lap is hit
		$LF
	]li
	[li 
		" 
		[b 
			"Dynamite
		]b
		" used to Deo-Express again, this time off track
		$LF
	]li
	[li 
		" Go behind the houses and carefully ride along the saw-horses to maintain lap skip
		$LF
	]li
	[li 
		" Run into out-of-bounds terrain to complete lap skip
		$LF
	]li
]ul
[h1 
	" Lap 3
	$LF
]h1
[ul 
	[li 
		" 
		[b 
			"Super Shield
		]b
		" to increase speed
		$LF
	]li
	[li 
		" 
		[b 
			"Jump 
		]b
		"to Deo-Express again
		$LF
	]li
	[li 
		" Use final coin on 
		[b 
			"Dynamite
		]b
		" to skip the corkscrew again and finish the race
		$LF
	]li
]ul
