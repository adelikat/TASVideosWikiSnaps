[h3 id=GeneralStatistics 
	" General statistics
	$LF
]h3
[div class=p 
	"Note: These statistics apply only to files that are currently available on this
	$LF
	"site. Obsolete movies are not counted (and thus, the actual amount of transferred
	$LF
	"data is much larger than indicated below), and neither are rejected or canceled
	$LF
	"submissions.
	$LF
]div
[div class=p 
	(MovieStatistics)
	$LF
]div
[h3 id=MovieData 
	" Movie data
	$LF
]h3
[h4 id=LongestMovies 
	" Longest movies
	$LF
]h4
[div class=p 
	(MovieStatistics|comp=-length|fields=formattedLength=Length)
	$LF
	(__wikiLink|displaytext=(More)|href=/MovieStatistics/LongestMovies)
	$LF
]div
[h4 id=ShortestMovies 
	" Shortest movies
	$LF
]h4
[div class=p 
	(MovieStatistics|comp=length|fields=formattedLength=Length)
	$LF
	(__wikiLink|displaytext=(More)|href=/MovieStatistics/ShortestMovies)
	$LF
]div
[h4 id=MostRerecords 
	" Most rerecords
	$LF
]h4
[div class=p 
