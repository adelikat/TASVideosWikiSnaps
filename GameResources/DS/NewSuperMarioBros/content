[h3 id=SpeedMechanics
 
	" Speed Mechanics
	$LF
]h3
[ul 
	[li 
		" Running Speed/Triple Jumping speed = 3.0 Pixels per frame
		$LF
	]li
	[li 
		" Shell Spinning speed = 2.75 Px/frame
		$LF
	]li
]ul
