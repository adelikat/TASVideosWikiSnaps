[h2 
	"RAM-addresses
	$LF
	[a id=heading-4319 
	]a
]h2
[p 
	"Here's the known RAM-addresses for this game.
	$LF
]p
[table 
	[tbody 
		[tr 
			[th 
				"Address 
			]th
			[td 
				"Explanation
				$LF
			]td
		]tr
		[tr 
			[th 
				"00FF27E2 
			]th
			[td 
				"RAM address for the spice harvester #1 spice load. 
				$LF
			]td
		]tr
		[tr 
			[th 
				"C742
			]th
			[td 
				"Selected harvester's spice load. Also applies when building something.
				$LF
			]td
		]tr
		[tr 
			[th 
				"D6C2
			]th
			[td 
				"Shows available money
				$LF
			]td
		]tr
		[tr 
			[th 
				"C04C
			]th
			[td 
				"Shows the current level. Poke it with value 1-9 and restart mission to level select.
				$LF
			]td
		]tr
	]tbody
]table
