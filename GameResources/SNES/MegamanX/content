[p 
	"YouTube video: 
	[a class=extlink href=http://www.youtube.com/watch?v=SZs7vnEgglk#t=8m24s rel=nofollow 
		"http://www.youtube.com/watch?v=SZs7vnEgglk#t=8m24s
	]a
	$LF
