]hr
[h1 
	" SystemWikiEditHelp
	$LF
]h1
[div class=p 
	[small 
		[b 
			"Emphasis
		]b
		": double single-quotes for '
		[b 
		]b
		"'italics'
		[b 
		]b
		"', double underlines for _
		[em 
		]em
		"_bold_
		[em 
		]em
		"_, double parentheses for (
		[b 
		]b
		"(smaller text)
		[b 
		]b
		") 
	]small
	[br 
	]br
	$LF
	[small 
		[b 
			"Lists
		]b
		": * for bullet lists, # for numbered lists
	]small
	[br 
	]br
	$LF
	[small 
		[b 
			"References
		]b
		": enclose your link with brackets: [link] or [link|text]
	]small
	[br 
	]br
	$LF
	[small 
		[b 
			"Misc
		]b
		": "!", "!!", "!!!" make headings, "%%
		[em 
		]em
		"%" makes a linebreak, "
		[del 
			"-" makes a horizontal ruler
		]del
	]small
	[br 
	]br
	$LF
	[small 
		"more on 
		(__wikiLink|/TextFormattingRules|TextFormattingRules)
	]small
]div
